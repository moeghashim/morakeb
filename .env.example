PORT=3000
HOST=127.0.0.1
DATABASE_PATH=./data/changes.db
APP_URL=http://localhost:3000

# Optional: retention limits (per monitor)
# RETENTION_SNAPSHOTS=20
# RETENTION_CHANGES=20

# Required: key to protect secrets in the database
# Generate with: openssl rand -base64 48
ENCRYPTION_KEY=

# Optional: AI provider API keys for Direct (API) summaries
# Set the one matching your chosen model/provider in Settings
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# GOOGLE_GENERATIVE_AI_API_KEY=

# Optional: Telegram for CI/App notifications (scripts/notify.ts)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# Cloudflare API credentials (for deploy-agent.ts)
# Get API Token: https://dash.cloudflare.com/profile/api-tokens → Create Token → Use "Edit Cloudflare Workers" template
# Get Account ID: https://dash.cloudflare.com/ → Right sidebar → Account ID
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ACCOUNT_ID=
