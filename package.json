{
  "name": "morakeb",
  "version": "0.1.0",
  "description": "Simple open-source URL monitoring tool with notifications",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "tui": "bun run src/tui/index.tsx",
    "morakeb": "bun run src/tui/index.tsx",
    "changes": "bun run src/tui/index.tsx",
    "db": "bun run src/db/browser.tsx",
    "setup": "bun run src/setup/index.tsx",
    "setup:local": "bun run scripts/setup-local.ts",
    "setup:vps": "bun run src/setup-vps/index.tsx",
    "deploy": "bun run src/setup/deploy.ts",
    "deploy:agent": "bun run scripts/deploy-agent.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:open": "bun run src/db/open.ts",
    "db:studio": "drizzle-kit studio",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "test": "ENCRYPTION_KEY=TEST_ENCRYPTION_KEY_0123456789abcdef0123456789abcdef bun test",
    "test:watch": "ENCRYPTION_KEY=TEST_ENCRYPTION_KEY_0123456789abcdef0123456789abcdef bun test --watch",
    "test:coverage": "ENCRYPTION_KEY=TEST_ENCRYPTION_KEY_0123456789abcdef0123456789abcdef bun test --coverage",
    "test:live": "ENCRYPTION_KEY=TEST_ENCRYPTION_KEY_0123456789abcdef0123456789abcdef LIVE=1 bun test tests/e2e"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "latest",
    "@ai-sdk/google": "latest",
    "@ai-sdk/openai": "latest",
    "@mozilla/readability": "^0.5.0",
    "ai": "latest",
    "diff": "^8.0.2",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.6.14",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "linkedom": "^0.18.12",
    "nanoid": "^5.0.9",
    "plainjob": "^0.0.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "turndown": "^7.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260108.0",
    "@types/bun": "latest",
    "@types/diff": "^8.0.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.0",
    "@types/turndown": "^5.0.5",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.8.2"
  },
  "packageManager": "bun@1.3.0"
}
